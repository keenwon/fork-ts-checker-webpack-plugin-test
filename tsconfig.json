{
    "compilerOptions": {
      "target": "es6",
      "lib": [
        "dom",
        "es2015",
        "es2016",
        "es2017"
      ],
      "module": "es6",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "strict": true,
      "suppressImplicitAnyIndexErrors": true,
      "removeComments": true,
      "sourceMap": true
    },
    "include": [
      "./src/**/*.ts",
      "./src/**/*.vue"
    ],
    "compileOnSave": false
  }