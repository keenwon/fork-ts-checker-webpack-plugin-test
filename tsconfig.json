{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "types": [
      "node",
      "webpack-env"
    ],
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true,
    "sourceMap": true
  },
  "include": [
    "./public/**/*.ts",
    "./public/**/*.vue",
    "./public/types/**/*"
  ],
  "compileOnSave": false
}